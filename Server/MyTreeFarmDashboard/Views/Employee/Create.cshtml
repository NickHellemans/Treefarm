@model AP.MyTreeFarm.Application.CQRS.Employees.CreateEmployeeDTO
@using FluentValidation.Results


@{
    ViewData["Title"] = "Aanmaken werknemer";
}


<h2 class="text-primary"> Werknemer toevoegen</h2>
@{
    @if (ViewData["Errors"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <ul class="mb-0">
                @foreach (var error in ViewData["Errors"] as IList<ValidationFailure>)
                {
                    <li>
                        @error.ErrorMessage
                    </li>
                }
            </ul>
        </div>
    }
}
<form method="post" asp-action="Create">
    <div class="mb-3">
        <label class="form-label" asp-for="EmployeeId">Personeelsnummer</label>
        <input asp-for="EmployeeId" class="form-control"/>
        <span class="text-danger" asp-validation-for="EmployeeId"></span>
        
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">Voornaam</label>
        <input asp-for="FirstName" class="form-control"/>
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName">Achternaam</label>
        <input asp-for="LastName" class="form-control"/>
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control"/>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Password">Wachtwoord</label>
        <input asp-for="Password" type="password" class="form-control mb-2"/>
        <span class="text-danger mb-2" asp-validation-for="Password"></span>
        <ul>
            <li class="fs-6 fw-lighter text-muted"><em>Wachtwoord moet minstens 12 karakters bevatten</em></li>
            <li class="fs-6 fw-lighter text-muted"><em>Wachtwoord moet minstens 1 kleine letter bevatten (a-z)</em></li>
            <li class="fs-6 fw-lighter text-muted"><em>Wachtwoord moet minstens 1 hoofdletter bevatten (A-Z)</em></li>
            <li class="fs-6 fw-lighter text-muted"><em>Wachtwoord moet minstens 1 nummer bevatten (0-9)</em></li>
        </ul>
    </div>
    <div class="mb-3 form-check">
        @Html.CheckBoxFor(e => e.IsAdmin)
        <label class="form-check-label" asp-for="IsAdmin">Admin</label>
    </div>
    <div class="mb-3 form-check">
        @Html.CheckBoxFor(e => e.IsActive)
        <label class="form-check-label" asp-for="IsActive">Actief</label>
    </div>
    <div class="form-group row">
        <div class="col-8 offset-2 row">
            <div class="col">
                <button type="submit" class="btn btn-primary w-75">Maak aan</button>
            </div>
            <div class="col">
                <a class="btn btn-danger w-75" href="javascript: history.go(-1);">Terug</a>
            </div>
        </div>
    </div>
</form>





